<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.creditease.monitor.mybatis.sqllite.grafana.mapper.ex.MonitorTaskExMapper" >
  <resultMap id="BaseResultMap" type="com.creditease.monitor.mybatis.sqllite.grafana.po.MonitorTask" >
    <id column="id" property="id" jdbcType="INTEGER" />
    <result column="project_id" property="projectId" jdbcType="INTEGER" />
    <result column="task_name" property="taskName" jdbcType="VARCHAR" />
    <result column="data_source_log" property="dataSourceLog" jdbcType="VARCHAR" />
    <result column="machine_id" property="machineId" jdbcType="VARCHAR" />
    <result column="status" property="status" jdbcType="TINYINT" />
    <result column="cut_template" property="cutTemplate" jdbcType="VARCHAR" />
    <result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
    <result column="update_time" property="updateTime" jdbcType="TIMESTAMP" />
  </resultMap>
  <sql id="Base_Column_List" >
    id, project_id, task_name, data_source_log, machine_id, status, cut_template,
    create_time, update_time
  </sql>
  <select id="selectOneByMachineId" resultMap="BaseResultMap">
    SELECT
    <include refid="Base_Column_List" />
    FROM monitor_task2
    WHERE machine_id like concat("'%,",${0},",%'") OR
          machine_id like concat("'",${0},",%'") OR
          machine_id like concat("'%,",${0},"'")
    limit 1
  </select>

  <select id="selectByTaskName" resultMap="BaseResultMap" parameterType="java.lang.String" >
    select
    <include refid="Base_Column_List" />
    from monitor_task2
    where task_name like #{taskName}
  </select>
  <select id="selectOneByTaskName" parameterType="string" resultMap="BaseResultMap">
    SELECT
    <include refid="Base_Column_List" />
    FROM monitor_task2
    WHERE task_name = #{taskName}
  </select>

  <select id="selectByProjectId" resultMap="BaseResultMap">
    SELECT
    <include refid="Base_Column_List" />
    FROM monitor_task2
    WHERE project_id = #{projectId}
  </select>

</mapper>