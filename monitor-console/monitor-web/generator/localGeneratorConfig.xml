<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
  PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
  "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
	<!-- mybatis-generator资源包路径 --> 
	<!-- <classPathEntry location="D:/mybatis-generator-core-1.3.2-bundle.zip"/> -->

	<context id="DB2Tables" targetRuntime="MyBatis3">
		<!-- 是否去除自动生成的注释 true：是 ： false:否 -->
		<commentGenerator>
			<property name="suppressAllComments" value="true" />
			<property name="suppressDate" value="true" />
		</commentGenerator>

		<!-- 数据库连接信息 -->
		<jdbcConnection driverClass="com.mysql.jdbc.Driver"
			connectionURL="jdbc:mysql://10.100.140.12:3306/monitor"
			userId="root" password="fintech123">
		</jdbcConnection>
		<javaTypeResolver>
			<property name="forceBigDecimals" value="false" />
		</javaTypeResolver>

		<!-- po实体代码位置 -->
		<javaModelGenerator targetPackage="com.creditease.monitor.mybatis.sqllite.grafana.po"
			targetProject="D:\ideaWorkSpace\monitor\monitor-console\monitor-web\src\main\java">
			<property name="enableSubPackages" value="true" />
			<property name="trimStrings" value="true" />
		</javaModelGenerator>
		<!-- sql代码的xml映射文件位置 -->
		<sqlMapGenerator targetPackage="com.creditease.monitor.mybatis.sqllite.grafana.mapper"
			targetProject="D:\ideaWorkSpace\monitor\monitor-console\monitor-web\src\main\resources">
			<property name="enableSubPackages" value="true" />
		</sqlMapGenerator>
		<!-- mapper接口位置 -->
		<javaClientGenerator type="XMLMAPPER" targetPackage="com.creditease.monitor.mybatis.sqllite.grafana.mapper"
			targetProject="D:\ideaWorkSpace\monitor\monitor-console\monitor-web\src\main\java">
			<property name="enableSubPackages" value="true" />
		</javaClientGenerator>
		
		<table tableName="monitor_task" domainObjectName="MonitorTask"
			enableSelectByExample="false" enableDeleteByExample="false"
			enableCountByExample="false"  enableUpdateByExample="false">
			<property name="useActualColumnNames" value="false" />
			<generatedKey column="id" sqlStatement="mysql" identity="true" />
			<columnRenamingRule searchString="^C_" replaceString="" />
		</table>
	</context>
</generatorConfiguration>